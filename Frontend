{
  "name": "focused-frontend",
  "version": "1.0.0",
  "dependencies": {
    "axios": "^1.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}

import React from "react";
import ReactDOM from "react-dom/client";
import App from "./App";
import "./index.css";

const root = ReactDOM.createRoot(document.getElementById("root"));
root.render(<App />);

body {
  font-family: Arial;
  margin: 0;
  padding: 20px;
  background: #f4f4f4;
}

.card {
  background: white;
  padding: 20px;
  border-radius: 10px;
  width: 400px;
  margin: auto;
  box-shadow: 0 0 10px #ccc;
}

import React, { useState, useEffect } from "react";
import axios from "axios";

const API = "http://localhost:5000/api";

export default function App() {
  const [token, setToken] = useState("");
  const [username, setUsername] = useState("");
  const [password, setPassword] = useState("");
  const [subject, setSubject] = useState("Math");
  const [duration, setDuration] = useState(25);
  const [tips, setTips] = useState([]);
  const [leaderboard, setLeaderboard] = useState([]);

  const login = async () => {
    const res = await axios.post(`${API}/login`, { username, password });
    setToken(res.data.token);
  };

  const register = async () => {
    await axios.post(`${API}/register`, { username, password });
    alert("Register success!");
  };

  const startSession = async () => {
    await axios.post(`${API}/start-session`, {}, { headers: { Authorization: token } });

    alert("Started! Auto-complete after test timer");
    setTimeout(completeSession, duration * 1000);
  };

  const completeSession = async () => {
    const res = await axios.post(
      `${API}/complete-session`,
      { durationMinutes: duration, subject },
      { headers: { Authorization: token } }
    );

    alert(`Completed! +${res.data.earned} FP`);
  };

  useEffect(() => {
    axios.get(`${API}/tips`).then(res => setTips(res.data));
    axios.get(`${API}/leaderboard`).then(res => setLeaderboard(res.data));
  }, []);

  return (
    <div className="card">
      <h2>FocusED</h2>

      {!token ? (
        <>
          <input placeholder="Username" onChange={e => setUsername(e.target.value)} />
          <input placeholder="Password" type="password" onChange={e => setPassword(e.target.value)} />
          <button onClick={login}>Login</button>
          <button onClick={register}>Register</button>
        </>
      ) : (
        <>
          <h3>Start Focus Session</h3>
          <input type="number" value={duration} onChange={e => setDuration(e.target.value)} />
          <select value={subject} onChange={e => setSubject(e.target.value)}>
            <option>Math</option>
            <option>Physics</option>
            <option>Chemistry</option>
            <option>English</option>
          </select>
          <button onClick={startSession}>Start</button>

          <h3>Tips</h3>
          <ul>
            {tips.map((t, i) => <li key={i}>{t}</li>)}
          </ul>

          <h3>Leaderboard</h3>
          <ul>
            {leaderboard.map((u, i) => (
              <li key={i}>{u.username} â€” {u.focus_points} FP</li>
            ))}
          </ul>
        </>
      )}
    </div>
  );
}
